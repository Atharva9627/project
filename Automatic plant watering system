#include <Wire.h>
#include <LiquidCrystal_I2C.h>
#include <DHT.h>

// LCD Setup
LiquidCrystal_I2C lcd(0x27, 16, 2);

// DHT11 Setup
#define DHTPIN 2
#define DHTTYPE DHT11
DHT dht(DHTPIN, DHTTYPE);

// Sensor Pins
#define WATER_SENSOR A0
#define SOIL_SENSOR A1
#define PUMP_PIN 7

unsigned long lastDisplay = 0;

void setup() {
  lcd.init();
  lcd.backlight();
  dht.begin();
  Serial.begin(9600);

  pinMode(WATER_SENSOR, INPUT);
  pinMode(SOIL_SENSOR, INPUT);
  pinMode(PUMP_PIN, OUTPUT);

  lcd.setCursor(0, 0);
  lcd.print("System Initializing");
  delay(2000);
  lcd.clear();
}

void loop() {
  float temp = dht.readTemperature();
  float hum = dht.readHumidity();
  int soilRaw = analogRead(SOIL_SENSOR);
  int waterRaw = analogRead(WATER_SENSOR);

  // Pump control: Moisture > 700 â†’ pump ON
  if (soilRaw > 700) {
    digitalWrite(PUMP_PIN, HIGH);
  } else {
    digitalWrite(PUMP_PIN, LOW);
  }

  // LCD Update every 2 seconds
  if (millis() - lastDisplay >= 2000) {
    lcd.clear();

    // First row: Humidity and Temperature
    lcd.setCursor(0, 0);
    lcd.print("H:");
    lcd.print(hum, 0);
    lcd.print("% T:");
    lcd.print(temp, 1);
    lcd.write(223); // Degree symbol
    lcd.print("C");

    // Second row: Soil Moisture and Tank Level
    lcd.setCursor(0, 1);
    lcd.print("M:");
    lcd.print(soilRaw);
    lcd.print(" L:");
    lcd.print(waterRaw > 500 ? "Full" : "Low");

    lastDisplay = millis();
  }

  // Serial debug
  Serial.print("Soil Moisture: ");
  Serial.println(soilRaw);
  Serial.print("Water Level Raw: ");
  Serial.println(waterRaw);

  delay(200);
}
